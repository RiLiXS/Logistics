<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/et_num"
        app:layout_constraintBottom_toBottomOf="@+id/et_num"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_reduce"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/bg_white_black_10dp"
        app:layout_constraintTop_toTopOf="@+id/et_num"
        app:layout_constraintBottom_toBottomOf="@+id/et_num"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:text="－"/>
    <EditText
        android:id="@+id/et_num"
        app:layout_constraintLeft_toRightOf="@+id/tv_reduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_black_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_add"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="0"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_add"
        app:layout_constraintLeft_toRightOf="@+id/et_num"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_num"
        app:layout_constraintBottom_toBottomOf="@+id/et_num"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/bg_white_black_10dp"
        android:text="＋"/>




</androidx.constraintlayout.widget.ConstraintLayout>